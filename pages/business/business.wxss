}

.location {
  background-color: #fff;
  height: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  margin-top: 10rpx;
  padding-left: 20rpx;
  /* border-bottom: 1rpx #9D9D9D solid; */
}

.location .icon {
  width: 34rpx;
  height: 34rpx;
}

.location .info {
  flex: 1;
  color: #333;
  font-size: 26rpx;
  margin: 0 10rpx;
  /* white-space: nowrap; */
  overflow: hidden;
  text-overflow: ellipsis;
}

.location .arrow_left {
  height: 30rpx;
  width: 21rpx;
  margin-right: 40rpx;
}

